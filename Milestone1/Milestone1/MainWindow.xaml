<Window x:Class="Milestone1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Milestone1"
        mc:Ignorable="d"
        Title="Milestone1" Height="625" Width="525">
    <Grid>
        <GroupBox x:Name="State_CityGroupBox" Header="State/City" HorizontalAlignment="Left" Height="177" Margin="10,10,0,0" VerticalAlignment="Top" Width="497">
            <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" Height="31" Margin="58,99,0,0" VerticalAlignment="Top" Width="59" FontSize="18"/>
        </GroupBox>
        <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" Height="32" Margin="72,63,0,0" VerticalAlignment="Top" Width="53" FontSize="18"/>
        <ComboBox x:Name="stateComboBox" HorizontalAlignment="Left" Height="32" Margin="174,63,0,0" VerticalAlignment="Top" Width="282" SelectionChanged="stateComboBox_SelectionChanged"/>
        <ComboBox x:Name="cityComboBox" HorizontalAlignment="Left" Height="35" Margin="174,123,0,0" VerticalAlignment="Top" Width="282" SelectionChanged="cityComboBox_SelectionChanged"/>
        <GroupBox x:Name="BusinessGroupBox" Header="Businesses" HorizontalAlignment="Left" Height="392" Margin="10,192,0,0" VerticalAlignment="Top" Width="497">
            <DataGrid x:Name="businessDataGrid" HorizontalAlignment="Left" Height="358" Margin="4,8,0,0" VerticalAlignment="Top" Width="477" FontSize="14"/>
        </GroupBox>

    </Grid>
</Window>
